extends ../template

block variables
    - var title = 'Блог'
    - var navBlog = ['Самое важное в SASS', 'Приёмы в вёрстке, без которых не обходится ни один сайт', 'Самый необходимый набор Gulp плагинов', 'Почему я выбрал Jade']

block content
    .header.header--min
        .header__socials
            include ../common/socials.pug        
        .header__content.header__content--min
            .header__user
                .user
                    .user__img
                        img.user__pic(src="assets/images/photo.jpg")  
                    h1.user__title--blog.title-dec Блог
                    .user__info Статьи, которые я написала (на самом деле нет)
            svg.header__text.header__text--min(height="250")
                    use(xlink:href="assets/images/sprite.svg#blog_header")
        button.header__hamburger(type="button")
            svg.hamburger__ico(height="40" width="40")
                    use(xlink:href="assets/images/sprite.svg#hamburger")
        svg.triangle(xmlns="http://www.w3.org/2000/svg" viewbox="0 0 1000 85" preserveaspectratio="none")
            polygon.triangle__part(points="0,0   0,86   500.8,86   500.8,75.5")
            polygon.triangle__part(points="1000,0   1000,86   500,86   500,75.5")

    .blog__wrap
        .blog
            .blog__nav.nav-blog
                ul.nav-blog__list
                    each item in navBlog
                                li.nav-blog__item
                                    a.nav-blog__link(href="") #{item}
            .blog__content
                ul.blog__list
                    li.blog__item
